<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1a237e"
    tools:context=".Fragments.Details">
    <LinearLayout
        android:background="@drawable/details_header"
        android:layout_width="200dp"
        android:layout_below="@+id/header"
        android:layout_alignParentStart="true"
        android:layout_height="100dp"
        android:orientation="horizontal"/>
    <LinearLayout
        android:background="@drawable/details_bottom"
        android:layout_width="200dp"
        android:layout_below="@+id/header"
       android:layout_alignParentEnd="true"
        android:layout_height="100dp"
        android:orientation="horizontal"/>

    <ImageView
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@drawable/details_header"
        android:orientation="horizontal"
        android:src="@drawable/background" />

    <LinearLayout
        android:id="@+id/middle"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@+id/header"
        android:background="@drawable/details_middle"
        android:orientation="horizontal" />

    <LinearLayout
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/middle"
        android:background="@drawable/details_bottom"
        android:orientation="horizontal" />

    <ImageView
        android:id="@+id/back_btn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/back" />
<ScrollView
    android:layout_width="match_parent"
    android:layout_below="@+id/middle"
    android:layout_marginStart="30dp"
    android:layout_marginTop="25dp"
    android:layout_marginEnd="20dp"
    android:scrollbars="none"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:fontFamily="sans-serif-black"
            android:text="@string/course_title"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:fontFamily="sans-serif-black"
            android:text="@string/price"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title"
            android:layout_marginTop="15dp"
            android:fontFamily="sans-serif-black"
            android:text="@string/about_head"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <androidx.core.widget.NestedScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_below="@+id/description"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp">

            <TextView
                android:id="@+id/des_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:text="@string/about_des"
                android:textColor="@color/black"
                android:textSize="14sp" />
        </androidx.core.widget.NestedScrollView>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/video"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/scrollView" />
    </RelativeLayout>
</ScrollView>

</RelativeLayout>